<ui>
	<hostwnd id="mainwnd" type="FrameHostWnd">
		<attr>
			<left>100</left>
			<top>100</top>
			<width>400</width>
			<height>400</height>
			<visible>1</visible>
			<appwindow>1</appwindow>
			<title>测试窗口</title>
		</attr>
		<uitree>
			<obj id="image.bkg" class="UIImage">
				<attr>
					<left>0</left>
					<top>0</top>
					<width>400</width>
					<height>400</height>
					<image>bitmap.mainwnd.background.png</image>
					<stretch>false</stretch>
					<visible>false</visible>
				</attr>
				<!--
				<evenlist>
					<event name="OnLButtonDown" file="MainWnd.xml.lua" func="OnBkgLButtonDown" />
				</evenlist>
				-->
			</obj>
			<obj id="image.title" class="UIImage">
				<attr>
					<left>0</left>
					<top>0</top>
					<width>400</width>
					<height>35</height>
					<image>bitmap.mainwnd.title.png</image>
					<visible>true</visible>
					<zorder>20</zorder>
				</attr>
				<!--
				<evenlist>
					<event name="OnLButtonDown" file="MainWnd.xml.lua" func="OnBkgLButtonDown" />
				</evenlist>
				-->
			</obj>
			<obj id="button.open" class="UIButton">
				<attr>
					<left>120</left>
					<top>150</top>
					<width>100</width>
					<height>30</height>
					<zorder>100</zorder>
					<normalbkg>bitmap.mainwnd.test.btn.normal</normalbkg>
					<hoverbkg>bitmap.mainwnd.test.btn.hover</hoverbkg>
					<downbkg>bitmap.mainwnd.test.btn.down</downbkg>
					<disablebkg>bitmap.mainwnd.test.btn.disable</disablebkg>
					<!--<imagelist>imagelist.mainwnd.test.btn</imagelist>-->
				</attr>
				<!--
				<evenlist>
					<event name="OnClick" file="MainWnd.xml.lua" func="OnOpenClick" />
				</evenlist>
				-->
			</obj>
		</uitree>
		<eventlist>
			<event name="OnCreate" file="MainWnd.xml.lua" func="OnCreate" />
			<event name="OnClose" file="MainWnd.xml.lua" func="OnClose" />
			<event name="OnShowWindow" file="MainWnd.xml.lua" func="OnShowWindow" />
			<event name="OnMove" file="MainWnd.xml.lua" func="OnMove" />
			<event name="OnMoving" file="MainWnd.xml.lua" func="OnMoving" />
			<event name="OnFocusChange" file="MainWnd.xml.lua" func="OnFocusChange" />
		</eventlist>
	</hostwnd>
</ui>